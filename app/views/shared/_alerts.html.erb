<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Stan Wielga Portfolio", sticky: false, time:5000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Stan Wielga Portfolio", sticky: false, time:5000) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Stan Wielga Portfolio", sticky: false, time:5000) %>
<% end %>