<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image, class:"img-fluid" %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <em><h3><%= @portfolio_item.subtitle %></h3></em>

      <p><%= @portfolio_item.body %></p>

      <hr>

      <h2>Technologies Used:</h2>

      <% @portfolio_item.technologies.each do |t|%>
          <p><%= t.name %></p>
      <% end %>

    </div>
  </div>
</div>




