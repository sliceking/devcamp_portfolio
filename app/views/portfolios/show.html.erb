<div class="container p-4">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main'), class:"img-fluid" %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <em><h3><%= @portfolio_item.subtitle %></h3></em>

      <p><%= @portfolio_item.body %></p>

      <hr>

      <h2>Technologies Used:</h2>

      <% @portfolio_item.technologies.each do |t|%>
          <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
      <div class="col-md-12">
        <%= link_to "edit portfolio", edit_portfolio_path(@portfolio_item), class:'btn btn-warning'%>
      </div>
      <% end %>

    </div>
  </div>
</div>




